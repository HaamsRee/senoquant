{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://haamsree.github.io/senoquant/schemas/model_details.schema.json",
  "title": "SenoQuant model details",
  "type": "object",
  "required": [
    "name",
    "description",
    "version",
    "settings"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "order": {
      "type": "number"
    },
    "tasks": {
      "$ref": "#/$defs/tasks"
    },
    "settings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/setting"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "tasks": {
      "type": "object",
      "properties": {
        "nuclear": {
          "$ref": "#/$defs/task_entry"
        },
        "cytoplasmic": {
          "$ref": "#/$defs/task_entry"
        }
      },
      "additionalProperties": false
    },
    "task_entry": {
      "type": "object",
      "required": [
        "supported"
      ],
      "properties": {
        "supported": {
          "type": "boolean"
        },
        "input_modes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "nuclear",
              "cytoplasmic",
              "nuclear+cytoplasmic"
            ]
          }
        },
        "nuclear_channel_optional": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "setting": {
      "oneOf": [
        {
          "$ref": "#/$defs/setting_float"
        },
        {
          "$ref": "#/$defs/setting_int"
        },
        {
          "$ref": "#/$defs/setting_bool"
        }
      ]
    },
    "setting_float": {
      "type": "object",
      "required": [
        "key",
        "label",
        "type",
        "default",
        "min",
        "max"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "tooltip": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "type": {
          "const": "float"
        },
        "default": {
          "type": "number"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "decimals": {
          "type": "integer",
          "minimum": 0
        },
        "enabled_by": {
          "type": "string",
          "minLength": 1
        },
        "disabled_by": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "setting_int": {
      "type": "object",
      "required": [
        "key",
        "label",
        "type",
        "default",
        "min",
        "max"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "tooltip": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "type": {
          "const": "int"
        },
        "default": {
          "type": "integer"
        },
        "min": {
          "type": "integer"
        },
        "max": {
          "type": "integer"
        },
        "enabled_by": {
          "type": "string",
          "minLength": 1
        },
        "disabled_by": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "setting_bool": {
      "type": "object",
      "required": [
        "key",
        "label",
        "type",
        "default"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "tooltip": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "type": {
          "const": "bool"
        },
        "default": {
          "type": "boolean"
        },
        "enabled_by": {
          "type": "string",
          "minLength": 1
        },
        "disabled_by": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  }
}
